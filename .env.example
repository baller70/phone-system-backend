
# Vonage Voice API Configuration
VONAGE_API_KEY=your_vonage_api_key_here
VONAGE_API_SECRET=your_vonage_api_secret_here
VONAGE_APPLICATION_ID=your_vonage_application_id_here
VONAGE_PRIVATE_KEY_PATH=./private.key
VONAGE_PHONE_NUMBER=your_vonage_phone_number

# Staff Configuration
STAFF_PHONE_NUMBER=+15551234567

# Cal.com Calendar Configuration (MUCH SIMPLER!)
CALCOM_API_TOKEN=your_calcom_api_token_here
CALCOM_BASE_URL=https://api.cal.com/v1
CALCOM_EVENT_TYPE_ID=your_event_type_id_here

# Legacy Google Calendar Configuration (can be removed)
# GOOGLE_CALENDAR_ID=primary
# GOOGLE_CREDENTIALS_PATH=./credentials.json
# GOOGLE_TOKEN_PATH=./token.json

# Application Configuration
FLASK_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Optional Configuration
HOLD_MUSIC_URL=https://example.com/hold-music.mp3
ESCALATION_LOG_FILE=/tmp/escalations.log
CALLBACK_LOG_FILE=/tmp/callbacks.log

# Facility Configuration
FACILITY_TIMEZONE=America/New_York
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=21

# PHASE 5: Foundation & Essential Intelligence
# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567

# Call Recording & Transcription
ENABLE_CALL_RECORDING=true
RECORDING_STORAGE_PATH=./recordings
TRANSCRIPTION_STORAGE_PATH=./transcriptions

# Conversation Memory (Redis - optional, will use in-memory if not provided)
REDIS_URL=redis://localhost:6379

# Monitoring & Metrics
ENABLE_METRICS=true

# PHASE 6: Advanced Booking Intelligence & Customer Experience
# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=bookings@yoursportsfacility.com
SUPPORT_EMAIL=support@yoursportsfacility.com

# Recurring Bookings
ENABLE_RECURRING_BOOKINGS=true

# Group Bookings
ENABLE_GROUP_BOOKINGS=true

# Waitlist
ENABLE_WAITLIST=true
WAITLIST_NOTIFICATION_WINDOW_HOURS=24

# Loyalty Program
ENABLE_LOYALTY_PROGRAM=true
LOYALTY_POINTS_PER_DOLLAR=1
POINTS_REDEMPTION_RATE=0.10

# VIP System
VIP_THRESHOLD_BOOKINGS=5
VIP_THRESHOLD_SPENT=500
PLATINUM_THRESHOLD_BOOKINGS=15
PLATINUM_THRESHOLD_SPENT=2000
VIP_DISCOUNT_PERCENT=5

# Booking Windows & Policies
EARLY_CANCELLATION_HOURS=48
LATE_CANCELLATION_FEE_PERCENT=50

# Discounts & Promotions
OFF_PEAK_DISCOUNT_PERCENT=15
REBOOKING_DISCOUNT_PERCENT=10

# Outbound Calls & Rebooking
ENABLE_REBOOKING_CALLS=true
REBOOKING_CALL_DELAY_DAYS=7

# Database Connection (for Phase 6 features)
# If using PostgreSQL for customer data, analytics, etc.
# DATABASE_URL=postgresql://user:password@localhost:5432/sports_facility
# For now, Phase 6 features will gracefully degrade without DB connection

# ============================================
# PHASE 7: Enterprise Intelligence & Multi-Channel
# ============================================

# Multi-Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,zh-cn,hi,pt,de,ja,ko,ar

# WhatsApp Integration (via Twilio)
WHATSAPP_ENABLED=false
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# SMS Integration
SMS_ENABLED=true

# Machine Learning Models
DEMAND_FORECAST_ENABLED=true
DYNAMIC_PRICING_ENABLED=true
CHURN_PREDICTION_ENABLED=false
UPSELL_ENGINE_ENABLED=false

# Dynamic Pricing Rules
SURGE_PRICING_THRESHOLD=0.8        # 80% capacity triggers surge pricing
SURGE_PRICING_MULTIPLIER=1.2       # +20% price increase during surge
OFF_PEAK_DISCOUNT=0.15              # -15% discount for low demand

# Advanced Analytics
ANALYTICS_RETENTION_DAYS=365
ENABLE_ADVANCED_ANALYTICS=true

# Background Jobs (Celery with Redis)
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379
ENABLE_BACKGROUND_JOBS=false

# Web Chat (Optional)
ENABLE_WEB_CHAT=false
WEB_CHAT_WEBSOCKET_URL=ws://localhost:5000/ws/chat

# Voice Broadcast Campaigns (Optional)
ENABLE_VOICE_BROADCASTS=false

# Integration Services (Optional)
# Salesforce CRM
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret

# QuickBooks Accounting
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret

# Slack Notifications
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_CHANNEL_BOOKINGS=#bookings
SLACK_CHANNEL_ALERTS=#alerts
